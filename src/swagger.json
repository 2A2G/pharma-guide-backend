{
  "openapi": "3.0.0",
  "info": {
    "title": "Pharma Guide Backend API",
    "version": "1.0.0",
    "description": "API REST para la aplicación móvil **PharmaGuide**, una herramienta académica para estudiantes de **Química Farmacéutica**.",
    "contact": {
      "name": "2A2G (Aldair Gutierrez Guerrero)",
      "url": "https://github.com/2A2G/pharma-guide-backend"
    },
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "servers": [
    {
      "url": "http://localhost:3000"
    }
  ],
  "paths": {
    "/api/access/pharma-guide/register": {
      "post": {
        "summary": "Registrar un nuevo usuario",
        "tags": ["Acceso"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["full_name", "email", "password"],
                "properties": {
                  "full_name": {
                    "type": "string",
                    "example": "Juan Pérez"
                  },
                  "email": {
                    "type": "string",
                    "example": "juan.perez@example.com"
                  },
                  "password": {
                    "type": "string",
                    "example": "123456"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Usuario registrado correctamente" },
          "400": { "description": "Faltan datos obligatorios" },
          "409": { "description": "El usuario ya existe" },
          "500": { "description": "Error interno del servidor" }
        }
      }
    },
    "/api/access/pharma-guide/login": {
      "post": {
        "summary": "Iniciar sesión de usuario",
        "tags": ["Acceso"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["email", "password"],
                "properties": {
                  "email": {
                    "type": "string",
                    "example": "juan.perez@example.com"
                  },
                  "password": {
                    "type": "string",
                    "example": "123456"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Inicio de sesión exitoso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "token": {
                      "type": "string",
                      "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."
                    }
                  }
                }
              }
            }
          },
          "401": { "description": "Credenciales inválidas" },
          "500": { "description": "Error al iniciar sesión" }
        }
      }
    },
    "/api/pharma-guide/study-plans": {
      "post": {
        "summary": "Crear un nuevo plan de estudio",
        "tags": ["Plan de Estudio"],
        "security": [{ "BearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["subject_name", "total_days", "daily_hour"],
                "properties": {
                  "subject_name": {
                    "type": "string",
                    "example": "Farmacología"
                  },
                  "total_days": {
                    "type": "integer",
                    "example": 30
                  },
                  "daily_hour": {
                    "type": "number",
                    "format": "float",
                    "example": 2.5
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Plan de estudio creado correctamente" },
          "400": {
            "description": "Faltan valores para crear el plan de estudio"
          },
          "401": { "description": "No autorizado" },
          "409": { "description": "El plan de estudio ya existe" },
          "500": { "description": "Error al crear el plan de estudio" }
        }
      },
      "get": {
        "summary": "Obtener el plan de estudio del usuario",
        "tags": ["Plan de Estudio"],
        "security": [{ "BearerAuth": [] }],
        "responses": {
          "200": { "description": "Plan de estudio obtenido correctamente" },
          "401": { "description": "No autorizado" },
          "404": { "description": "No se encontró el plan de estudio" },
          "500": { "description": "Error al obtener el plan de estudio" }
        }
      }
    },
    "/api/pharma-guide/study-plans/{id}": {
      "put": {
        "summary": "Actualizar el plan de estudio del usuario",
        "tags": ["Plan de Estudio"],
        "security": [{ "BearerAuth": [] }],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "integer" }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["subject_name", "total_days", "daily_hour"],
                "properties": {
                  "subject_name": {
                    "type": "string",
                    "example": "Farmacología"
                  },
                  "total_days": {
                    "type": "integer",
                    "example": 30
                  },
                  "daily_hour": {
                    "type": "number",
                    "format": "float",
                    "example": 2.5
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Plan de estudio actualizado correctamente" },
          "400": {
            "description": "Faltan valores para actualizar el plan de estudio"
          },
          "401": { "description": "No autorizado" },
          "403": {
            "description": "No tienes permiso para actualizar este plan"
          },
          "404": { "description": "No se encontró el plan de estudio" },
          "500": { "description": "Error al actualizar el plan de estudio" }
        }
      },
      "delete": {
        "summary": "Eliminar un plan de estudio",
        "tags": ["Plan de Estudio"],
        "security": [{ "BearerAuth": [] }],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "integer" }
          }
        ],
        "responses": {
          "200": { "description": "Plan de estudio eliminado correctamente" },
          "401": { "description": "No autorizado" },
          "403": { "description": "No tienes permiso para eliminar este plan" },
          "404": { "description": "No se encontró el plan de estudio" },
          "500": { "description": "Error al eliminar el plan de estudio" }
        }
      },
      "get": {
        "summary": "Obtener un plan de estudio específico por ID",
        "tags": ["Plan de Estudio"],
        "security": [{ "BearerAuth": [] }],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "integer" }
          }
        ],
        "responses": {
          "200": { "description": "Plan de estudio obtenido correctamente" },
          "401": { "description": "No autorizado" },
          "404": { "description": "No se encontró el plan de estudio" },
          "500": { "description": "Error al obtener el plan de estudio" }
        }
      }
    },
    "/api/pharma-guide/setting/status": {
      "get": {
        "summary": "Obtener todos los estados",
        "tags": ["Estado"],
        "security": [{ "BearerAuth": [] }],
        "responses": {
          "200": { "description": "Estados obtenidos correctamente" },
          "401": { "description": "No autorizado" },
          "500": { "description": "Error del servidor" }
        }
      },
      "post": {
        "summary": "Crear un nuevo estado",
        "tags": ["Estado"],
        "security": [{ "BearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["name"],
                "properties": {
                  "name": { "type": "string", "example": "Pendiente" },
                  "description": {
                    "type": "string",
                    "example": "Estado inicial"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Estado creado correctamente" },
          "400": { "description": "Datos inválidos" },
          "401": { "description": "No autorizado" },
          "500": { "description": "Error del servidor" }
        }
      }
    },
    "/api/pharma-guide/setting/status/{id}": {
      "get": {
        "summary": "Obtener un estado por ID",
        "tags": ["Estado"],
        "security": [{ "BearerAuth": [] }],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "integer" }
          }
        ],
        "responses": {
          "200": { "description": "Estado obtenido correctamente" },
          "401": { "description": "No autorizado" },
          "404": { "description": "Estado no encontrado" },
          "500": { "description": "Error del servidor" }
        }
      },
      "put": {
        "summary": "Actualizar un estado por ID",
        "tags": ["Estado"],
        "security": [{ "BearerAuth": [] }],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "integer" }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": { "type": "string", "example": "En proceso" },
                  "description": { "type": "string", "example": "Actualizado" }
                }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Estado actualizado correctamente" },
          "400": { "description": "Datos inválidos" },
          "401": { "description": "No autorizado" },
          "404": { "description": "Estado no encontrado" },
          "500": { "description": "Error del servidor" }
        }
      },
      "delete": {
        "summary": "Eliminar un estado por ID",
        "tags": ["Estado"],
        "security": [{ "BearerAuth": [] }],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "integer" }
          }
        ],
        "responses": {
          "200": { "description": "Estado eliminado correctamente" },
          "401": { "description": "No autorizado" },
          "404": { "description": "Estado no encontrado" },
          "500": { "description": "Error del servidor" }
        }
      }
    },
    "/api/pharma-guide/setting/role": {
      "post": {
        "summary": "Crear un nuevo rol",
        "tags": ["Rol"],
        "security": [{ "BearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["name"],
                "properties": {
                  "name": { "type": "string", "example": "Admin" },
                  "description": {
                    "type": "string",
                    "example": "Rol de administrador"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Rol creado correctamente" },
          "400": { "description": "Datos inválidos" },
          "401": { "description": "No autorizado" },
          "500": { "description": "Error del servidor" }
        }
      },
      "get": {
        "summary": "Obtener todos los roles",
        "tags": ["Rol"],
        "security": [{ "BearerAuth": [] }],
        "responses": {
          "200": { "description": "Roles obtenidos correctamente" },
          "401": { "description": "No autorizado" },
          "500": { "description": "Error del servidor" }
        }
      },
      "delete": {
        "summary": "Eliminar un rol por ID",
        "tags": ["Rol"],
        "security": [{ "BearerAuth": [] }],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "integer" }
          }
        ],
        "responses": {
          "200": { "description": "Rol eliminado correctamente" },
          "401": { "description": "No autorizado" },
          "404": { "description": "Rol no encontrado" },
          "500": { "description": "Error del servidor" }
        }
      },
      "put": {
        "summary": "Actualizar un rol por ID",
        "tags": ["Rol"],
        "security": [{ "BearerAuth": [] }],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "integer" }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": { "type": "string", "example": "User" },
                  "description": {
                    "type": "string",
                    "example": "Rol de usuario"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Rol actualizado correctamente" },
          "400": { "description": "Datos inválidos" },
          "401": { "description": "No autorizado" },
          "404": { "description": "Rol no encontrado" },
          "500": { "description": "Error del servidor" }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "BearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  },
  "security": [
    {
      "BearerAuth": []
    }
  ]
}
