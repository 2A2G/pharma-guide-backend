{
  "openapi": "3.0.0",
  "info": {
    "title": "Pharma Guide Backend API",
    "version": "1.0.0",
    "description": "API REST para la aplicación móvil **PharmaGuide**, una herramienta académica para estudiantes de **Química Farmacéutica**. Esta API ofrente las diferentes funcionalidades para que la aplicación móvil pueda funcionar correctamente.",
    "contact": {
      "name": "2A2G (Aldair Gutierrez Guerrero)",
      "url": "https://github.com/2A2G/pharma-guide-backend"
    },
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "servers": [
    {
      "url": "http://localhost:3000"
    }
  ],
  "paths": {
    "/api/setting/status": {
      "get": {
        "summary": "Obtener todos los estados",
        "tags": ["Estado"],
        "responses": {
          "200": { "description": "Estados obtenidos correctamente" },
          "500": { "description": "Error del servidor" }
        }
      },
      "post": {
        "summary": "Crear un nuevo estado",
        "tags": ["Estado"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["name"],
                "properties": {
                  "name": { "type": "string", "example": "Pendiente" },
                  "description": {
                    "type": "string",
                    "example": "Estado inicial"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Estado creado correctamente" },
          "400": { "description": "Datos inválidos" },
          "500": { "description": "Error del servidor" }
        }
      },
      "put": {
        "summary": "Actualizar un estado por ID",
        "tags": ["Estado"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "integer", "example": 1 }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": { "type": "string", "example": "En proceso" },
                  "description": { "type": "string", "example": "Actualizado" }
                }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Estado actualizado correctamente" },
          "400": { "description": "Datos inválidos" },
          "404": { "description": "Estado no encontrado" },
          "500": { "description": "Error del servidor" }
        }
      },
      "delete": {
        "summary": "Eliminar un estado por ID",
        "tags": ["Estado"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "integer", "example": 1 }
          }
        ],
        "responses": {
          "200": { "description": "Estado eliminado correctamente" },
          "404": { "description": "Estado no encontrado" },
          "500": { "description": "Error del servidor" }
        }
      }
    },
    "/api/setting/status/{id}": {
      "get": {
        "summary": "Obtener un estado por ID",
        "tags": ["Estado"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "integer", "example": 1 }
          }
        ],
        "responses": {
          "200": { "description": "Estado obtenido correctamente" },
          "404": { "description": "Estado no encontrado" },
          "500": { "description": "Error del servidor" }
        }
      }
    },
    "/api/users/register": {
      "post": {
        "summary": "Registrar un nuevo usuario",
        "tags": ["Usuarios"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["full_name", "email", "password"],
                "properties": {
                  "full_name": {
                    "type": "string",
                    "example": "Juan Pérez"
                  },
                  "email": {
                    "type": "string",
                    "example": "juan.perez@example.com"
                  },
                  "password": {
                    "type": "string",
                    "example": "123456"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Usuario registrado correctamente" },
          "400": { "description": "Faltan datos obligatorios" },
          "409": { "description": "El usuario ya existe" },
          "500": { "description": "Error interno del servidor" }
        }
      }
    },
    "/api/users/login": {
      "post": {
        "summary": "Iniciar sesión de usuario",
        "tags": ["Usuarios"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["email", "password"],
                "properties": {
                  "email": {
                    "type": "string",
                    "example": "juan.perez@example.com"
                  },
                  "password": {
                    "type": "string",
                    "example": "123456"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Inicio de sesión exitoso" },
          "401": { "description": "Credenciales inválidas" },
          "500": { "description": "Error al iniciar sesión" }
        }
      }
    },
    "/api/study-plans": {
      "post": {
        "summary": "Crear un nuevo plan de estudio",
        "tags": ["Plan de Estudio"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["subject_name", "total_days", "daily_hour"],
                "properties": {
                  "subject_name": {
                    "type": "string",
                    "example": "Farmacología"
                  },
                  "total_days": {
                    "type": "integer",
                    "example": 30
                  },
                  "daily_hour": {
                    "type": "number",
                    "format": "float",
                    "example": 2.5
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Plan de estudio creado correctamente" },
          "400": {
            "description": "Faltan valores para crear el plan de estudio"
          },
          "409": { "description": "El plan de estudio ya existe" },
          "500": { "description": "Error al crear el plan de estudio" }
        }
      },
      "get": {
        "summary": "Obtener el plan de estudio del usuario",
        "tags": ["Plan de Estudio"],
        "responses": {
          "200": { "description": "Plan de estudio obtenido correctamente" },
          "404": { "description": "No se encontró el plan de estudio" },
          "500": { "description": "Error al obtener el plan de estudio" }
        }
      }
    },
    "/api/study-plans/{id}": {
      "get": {
        "summary": "Obtener un plan de estudio específico por ID",
        "tags": ["Plan de Estudio"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            },
            "description": "ID del plan de estudio que se desea obtener"
          }
        ],
        "responses": {
          "200": { "description": "Plan de estudio obtenido correctamente" },
          "404": { "description": "No se encontró el plan de estudio" },
          "500": { "description": "Error al obtener el plan de estudio" }
        }
      },
      "put": {
        "summary": "Actualizar el plan de estudio del usuario",
        "tags": ["Plan de Estudio"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            },
            "description": "ID del plan de estudio que se desea actualizar"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["subject_name", "total_days", "daily_hour"],
                "properties": {
                  "subject_name": {
                    "type": "string",
                    "example": "Farmacología"
                  },
                  "total_days": {
                    "type": "integer",
                    "example": 30
                  },
                  "daily_hour": {
                    "type": "number",
                    "format": "float",
                    "example": 2.5
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Plan de estudio actualizado correctamente" },
          "400": {
            "description": "Faltan valores para actualizar el plan de estudio"
          },
          "403": {
            "description": "No estás autorizado para actualizar este plan de estudio"
          },
          "404": { "description": "No se encontró el plan de estudio" },
          "500": { "description": "Error al actualizar el plan de estudio" }
        }
      }
    }
  }
}
